<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>cn.com.mustache.plugins.mybatis.link</id>
    <name>Mybatis Link</name>
    <vendor email="steven@mustache.com.cn" url="https://mustache.com.cn">Mustache</vendor>

    <description>
        <![CDATA[
        Mybatis Link is a plugin that can quickly jump between Mybatis Xml Mapper and JAVA Mapper methods. Follow simple principles, only for quick jump, to help developers improve development efficiency.<br/>
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <dom.fileMetaData implementation="cn.com.mustache.plugins.mybatis.link.description.MapperDescription"
                          rootTagName="mapper"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="cn.com.mustache.plugins.mybatis.link.provider.MapperLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="XML"
                                        implementationClass="cn.com.mustache.plugins.mybatis.link.provider.StatementLineMarkerProvider"/>
    </extensions>
</idea-plugin>
